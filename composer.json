{
  "name": "nova/facade",
  "description": "Modern PHP 8.1+ facade library with multi-runtime awareness (Workerman/Swoole/Swow/Fiber) and Eloquent integration.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Nova\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "suggest": {
    "ext-swoole": "Enable coroutine-aware context.",
    "ext-swow": "Enable coroutine-aware context.",
    "workerman/workerman": "Run in Workerman servers.",
    "illuminate/database": "Use Eloquent ORM."
  },
  "bin": [
    "bin/nova"
  ],
  "scripts": {
    "nova:info": "@php bin/nova info"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.x-dev"
    }
  }
}
